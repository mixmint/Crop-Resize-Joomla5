<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="attribs">
		<fieldset name="cropresize_params" label="PLG_SYSTEM_CROPRESIZE">
			<field
				name="crop_images"
				type="radio"
				label="PLG_SYSTEM_CROPRESIZE_CROP_IMAGES_LABEL"
				layout="joomla.form.field.radio.switcher"
				default="0"
				filter="integer"
				>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field
				name="crop_images_width"
				type="number"
				label="PLG_SYSTEM_CROPRESIZE_CROP_IMAGES_WIDTH_LABEL"
				default="640"
				hint="PLG_SYSTEM_CROPRESIZE_HINT_PX"
				filter="integer"
				min="1"
				validate="number"
				showon="crop_images:1"
			/>

			<field
				name="crop_images_height"
				type="number"
				label="PLG_SYSTEM_CROPRESIZE_CROP_IMAGES_HEIGHT_LABEL"
				default="480"
				hint="PLG_SYSTEM_CROPRESIZE_HINT_PX"
				filter="integer"
				min="1"
				validate="number"
				showon="crop_images:1"
			/>
		</fieldset>
	</fields>
</form>
